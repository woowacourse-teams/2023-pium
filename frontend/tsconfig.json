{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "paths": {
      "types/*": ["./src/types"],
      "pages/*": ["./src/pages"],
      "components/*": ["./src/components"],
      "hooks/*": ["./src/hooks"],
      "utils/*": ["./src/utils"],
      "assets/*": ["./src/assets"],
      "constants/*": ["./src/constants"]
    }
  },
  "include": ["src/**/*"]
}
