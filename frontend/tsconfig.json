{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "jsx": "react-jsx",

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "types/*": ["types/*"],
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "contexts/*": ["contexts/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "assets/*": ["assets/*"],
      "constants/*": ["constants/*"],
      "style/*": ["style/*"],
      "store/*": ["store/*"]
    },

    "types": ["cypress"]
  },
  "include": ["src/**/*", "cypress/**/*"]
}
