{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "jsx": "react-jsx",

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"],
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "assets/*": ["assets/*"],
      "constants/*": ["constants/*"]
    }
  },
  "include": ["src/**/*"]
}
